{
  "openapi": "3.0.0",
  "info": {
    "title": "API Lista de Tarefas",
    "version": "1.0.0",
    "description": "Documentação da API de Lista de Tarefas. Todas as rotas protegidas exigem autenticação JWT via header Authorization: Bearer <token>."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/api/tarefas": {
      "post": {
        "summary": "Criar uma nova tarefa",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" },
                  "descricao": { "type": "string" },
                  "status": { "type": "string", "enum": ["pendente", "em andamento", "concluída"] }
                },
                "required": ["titulo", "descricao", "status"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Tarefa criada" },
          "400": { "description": "Campos obrigatórios ausentes" },
          "401": { "description": "Token ausente ou inválido" }
        }
      },
      "get": {
        "summary": "Listar todas as tarefas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de tarefas" },
          "401": { "description": "Token ausente ou inválido" }
        }
      }
    },
    "/api/tarefas/status": {
      "get": {
        "summary": "Filtrar tarefas por status",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["pendente", "em andamento", "concluída"] }
          }
        ],
        "responses": {
          "200": { "description": "Lista de tarefas filtradas" },
          "400": { "description": "Status não informado" },
          "401": { "description": "Token ausente ou inválido" }
        }
      }
    },
    "/api/tarefas/{id}/status": {
      "patch": {
        "summary": "Atualizar status de uma tarefa",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["pendente", "em andamento", "concluída"] }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Tarefa atualizada" },
          "404": { "description": "Tarefa não encontrada" },
          "401": { "description": "Token ausente ou inválido" }
        }
      }
    },
    "/api/tarefas/{id}": {
      "delete": {
        "summary": "Remover uma tarefa",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "Tarefa removida" },
          "404": { "description": "Tarefa não encontrada" },
          "401": { "description": "Token ausente ou inválido" }
        }
      }
    }
  }
}
